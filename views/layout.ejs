  <script type="text/javascript">
  $(document).ready(function(){
    $('.sidenav').sidenav();
    $(".dropdown-trigger").dropdown();
    $('select').formSelect();
    $('.modal').modal();
  //  introJs().start();
  });

  function fechar (){
    $('.fixed-action-btn').toggle();
  }
  function abrirModal(desc, id){
    $('#pok').text('Deseja deletar o '+desc+' ?' );
    $('#linkok').attr("href", "/delete/"+id);
  }
  function abrirModalProd(desc, id){
    $('#pok').text('Deseja deletar o '+desc+' ?' );
    $('#linkok').attr("href", "/deleteProd/"+id);
  }

  </script>


