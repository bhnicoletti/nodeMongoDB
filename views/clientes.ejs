<%- contentFor('body') %>

  <h1>Listagem de Clientes</h1>
  <p>Clientes já cadastrados no sistema.</p>
  <table>
    <thead>
      <tr style="background-color: #CCC">
        <td style="width:50%">Nome</td>
        <td style="width:15%">Idade</td>
        <td style="width:15%">UF</td>
        <td colspan="2" style="width:20%">Ações</td>
      </tr>
    </thead>
    <tbody>
      <% if(!docs || docs.length == 0) { %>
        <tr>
          <td colspan='4'>Nenhum cliente cadastrado.</td>
        </tr>
      <% } else {
          docs.forEach(function(customer){ %>
          <tr>
            <td style='width:50%'><%= customer.nome %></td>
            <td style='width:15%'><%= customer.idade %></td>
            <td style='width:15%'><%= customer.uf %></td>
            <td style='width:20%'>


              <a class="waves-effect waves-light btn red modal-trigger" href="#modalConfirm" onclick="abrirModal('<%= customer.nome %>', '<%= customer._id %>')" >Excluir</a>


            </td>
            <td style='width:20%'>
              <a class="waves-effect waves-light btn" href="/edit/<%= customer._id %>" title="Alterar Cliente" >Alterar</a>
            </td>
          </tr>
          <% })
          }%>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4">
          <a class="waves-effect waves-light btn" href="/cliente"><i class="material-icons left">add</i>Cadastrar Novo Cliente </a>
        </td>
      </tr>

    </tfoot>
  </table>

  <div id="modalConfirm" class="modal">
    <div class="modal-content">
      <h4>Modal de Confirmação</h4>
      <p id="pok">Deseja deletar o ?</p>
    </div>
    <div class="modal-footer">
      <a id="linkok" class="waves-effect waves-light btn "><i class="material-icons right">check_circle</i>Sim</a>
      <a href="#!" class="modal-close waves-effect waves-light btn red"> Não<i class="material-icons right">cancel</i></a>
    </div>
  </div>
